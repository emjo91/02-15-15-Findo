<% @array[0].each do |x, y| %>
  <p><%= "#{x.capitalize}: #{y}" %></p>
<% end %>

<% @array2[0].each do |x, y| %>
  <p><%= "#{x.capitalize}: #{y}" %></p>
<% end %>

<br>
<form action="/found_pet_email_send">
  <p>Send to: Email Address:</p>
  <input type="text" name="email">
  
  <br><p>Subject:</p>
  <input type="text" name="subject">
  
  <br>   
  <p>Email to the Owner:</p>
  <textarea name="body" rows="10" cols="50">
    Enter text here
  </textarea>

  <input type="hidden" name="serial_num" value="<%= @serial_num %>">
  
  <input type="hidden" name="email" value="<%= @email %>">
  
  <br><br>
  <input type="submit" value="Submit">
</form>


