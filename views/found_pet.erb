<h1><%= @header %></h1>
<h3>Thank you for finding this pet!</h3>


<% @array[0].each do |x, y| %>
  <p><%= "#{x.capitalize}: #{y}" %></p>
<% end %>

<br>
<form action="/found_pet_email_send">
  <p>Subject:</p>
  <input type="text" name="subject">
  
  <br>   
  <p>Email to the Owner:</p>
  <textarea name="body" rows="10" cols="50">
    Enter text here
  </textarea>

  <input type="hidden" name="serial_num">

  <br><br>
  <input type="submit" value="Submit">
</form>


