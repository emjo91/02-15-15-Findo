<h3>Owner Information</h3>

<form action="/new_user_confirmed" method="post">
    
  <p>Owner Name:</p>
  <input type="text" required autofocus name="name" placeholder="First and last">

  <p>Secondary Owner:</p>
  <input type="text" required name="secondary_owner">

  <p>Phone Number <br> (ex. 4025551234):</p>
  <input type="tel" required name="phone_num" placeholder="4025551234">  
  
  <p>Email Adress</p>
  <input type="email" required name="email" placeholder="findo@gmail.com">  

  <p>Address:</p>
  <input type="text" required name="address">
  
  <p>City:</p>
  <input type="text" required name="city">
  
  <p>State:</p>
  <input type="text" required maxlength=2 name="state" placeholder="NE">
  
  <p>Zip Code:</p>
  <input type="text" required name="zip">
  
  <br><br>
  <input type="submit" required value="Submit">
  
</form>