<div id="float-right">
  <p>Current Information:</p>
  <br>
  <% @array[0].each do |x, y| %>
    <p><%= "#{x.capitalize}: #{y}" %></p>
  <% end %>
  <br><br>
</div><!-- end float-right -->

<div id="float-left">
    <form action="edit_pet_confirm">
  
    <!-- This is the serial number from the previous page... -->
    <input type="hidden" name="serial_num" 
    value="<%= @serial_num %>">
  
    <p>Name:</p>
    <input type="text" required autofocus name="name">
  
    <p>Breed:</p>
    <input type="text" required name="breed">
  
    <p>Age:</p>
    <input type="text" required name="age">
  
    <p>Colour:</p>
    <input type="text" required name="colour">
  
    <p>Description:</p>
    <input type="text" required name="description">
    
    <!-- Passing along id's below here -->
    <input type="hidden" name="id" value="<%= @id %>">
    
    <input type="hidden" name="owner_id" value="<%= @owner_id %>">
    
    <input type="hidden" name="temperament_id" value="<%= @temperament_id %>">

    <br><br>
    <input type="submit" value="Submit">

  </form>
  <br>
</div><!-- end left-float -->